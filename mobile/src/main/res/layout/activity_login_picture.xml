<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ruiriot.deepur.LoginPictureActivity">

    <FrameLayout
        android:id="@+id/activity_login_frame_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="160dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/activity_login_picture_user_image"
            android:layout_width="156dp"
            android:layout_height="156dp"
            android:contentDescription="@string/activity_login_picture_user_image"
            android:scaleType="centerCrop"
            android:src="@drawable/menoa"/>

        <ImageView
            android:id="@+id/activity_login_picture_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_gravity="bottom|end"
            android:background="@drawable/bg_round"
            android:elevation="2dp"
            android:layout_margin="2dp"
            android:tint="@color/textColor_secondary_black"
            android:src="@drawable/ic_camera_alt_white_24dp"/>

    </FrameLayout>

    <TextView
        android:id="@+id/activity_login_picture_user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_login_frame_layout"
        android:textSize="24sp"
        android:gravity="center"
        android:layout_marginTop="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginBottom="8dp"
        android:text="User Name"
        android:textColor="@color/textColor_secondary_black"
        android:fontFamily="sans-serif"/>

    <TextView
        android:id="@+id/activity_login_picture_user_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_login_picture_user_name"
        android:gravity="center"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginBottom="8dp"
        android:textSize="20sp"
        android:text="email"
        android:textColor="@color/textColor_secondary_black"
        android:fontFamily="sans-serif-condensed-light"/>

    <ImageView
        android:id="@+id/activity_login_picture_next_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_chevron_right_black_24dp"
        android:background="@drawable/bg_round"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="56dp"
        android:padding="10dp"/>

    <LinearLayout
        android:id="@+id/activity_login_stepper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="56dp"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/activity_login_stepper_step1"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:text="1"
                android:textSize="16sp"
                android:gravity="center"
                android:textColor="@color/textColor_secondary_black"
                android:fontFamily="sans-serif-condensed"
                android:background="@drawable/bg_round_grey"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/activity_login_stepper_step2"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:text="2"
                android:textSize="16sp"
                android:gravity="center"
                android:textColor="@color/textColor_secondary_black"
                android:fontFamily="sans-serif-condensed"
                android:background="@drawable/bg_round"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
