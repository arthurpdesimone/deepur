<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ruiriot.deepur.LoginPictureActivity">

    <FrameLayout
        android:id="@+id/activity_login_frame_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/activity_login_picture_user_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:contentDescription="@string/activity_login_picture_user_image"
            android:scaleType="centerCrop"
            android:src="@drawable/menoa"/>

    </FrameLayout>

    <TextView
        android:id="@+id/activity_login_user_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_login_frame_layout"
        android:textSize="30sp"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:text="email"
        android:textColor="@color/textColor_secondary_black"
        android:fontFamily="sans-serif-condensed"/>

</RelativeLayout>
