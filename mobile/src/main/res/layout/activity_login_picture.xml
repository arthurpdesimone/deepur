<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ruiriot.deepur.LoginPictureActivity">

    <TextView
        android:id="@+id/activity_login_picture_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginTop="48dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:text="@string/activity_login_picture_title"
        android:textColor="@color/textColor_secondary_black"
        android:fontFamily="sans-serif"/>

    <FrameLayout
        android:id="@+id/activity_login_frame_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/activity_login_picture_user_image"
            android:layout_width="196dp"
            android:layout_height="196dp"
            android:contentDescription="@string/activity_login_picture_user_image"
            android:scaleType="centerCrop"
            android:src="@drawable/menoa"/>

        <ImageView
            android:id="@+id/activity_login_picture_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:layout_gravity="bottom|end"
            android:background="@drawable/bg_round_white"
            android:elevation="2dp"
            android:layout_margin="2dp"
            android:tint="@color/color_accent"
            android:src="@drawable/ic_camera_alt_white_24dp"/>

    </FrameLayout>

    <TextView
        android:id="@+id/activity_login_picture_user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_login_frame_layout"
        android:textSize="24sp"
        android:gravity="center"
        android:layout_marginTop="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginBottom="8dp"
        android:text="User Name"
        android:textColor="@color/textColor_secondary_black"
        android:fontFamily="sans-serif"/>

    <TextView
        android:id="@+id/activity_login_picture_user_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_login_picture_user_name"
        android:gravity="center"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginBottom="8dp"
        android:textSize="20sp"
        android:text="email"
        android:textColor="@color/textColor_secondary_black"
        android:fontFamily="sans-serif-condensed-light"/>

    <TextView
        android:id="@+id/activity_login_picture_next_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="56dp"
        android:textSize="14sp"
        android:gravity="center"
        android:text="@string/activity_login_next_button"
        android:textColor="@color/color_accent"
        android:padding="8dp"
        android:minWidth="64dp"
        android:fontFamily="sans-serif-medium"/>

</RelativeLayout>
