<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/activity_login_picture_relative"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ruiriot.deepur.LoginPictureActivity"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background">

    <FrameLayout
        android:id="@+id/activity_login_frame_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="160dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/activity_login_picture_user_image"
            android:layout_width="156dp"
            android:layout_height="156dp"
            android:contentDescription="@string/activity_login_picture_user_image"
            android:scaleType="centerCrop"
            android:src="@drawable/menoa"/>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/activity_login_picture_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="8dp"
            app:fabSize="mini"
            app:backgroundTint="@color/md_grey_100"
            app:rippleColor="@color/md_grey_300"
            android:src="@drawable/ic_camera_alt_black_24dp"/>

    </FrameLayout>

    <TextView
        android:id="@+id/activity_login_picture_user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_login_frame_layout"
        android:textSize="24sp"
        android:gravity="center"
        android:layout_marginTop="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginBottom="8dp"
        android:text="User Name"
        android:textColor="@color/textColor_secondary_black"
        android:fontFamily="sans-serif"/>

    <TextView
        android:id="@+id/activity_login_picture_user_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_login_picture_user_name"
        android:gravity="center"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginBottom="8dp"
        android:textSize="20sp"
        android:text="email"
        android:textColor="@color/textColor_secondary_black"
        android:fontFamily="sans-serif-condensed-light"/>

    <TextView
        android:id="@+id/activity_login_picture_next_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:drawableEnd="@drawable/ic_chevron_right_black_24dp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="60dp"
        android:minWidth="96dp"
        android:gravity="center"
        android:textColor="@color/color_accent"
        android:fontFamily="sans-serif-medium"
        android:text="@string/activity_login_next_button"
        android:padding="8dp"/>

    <LinearLayout
        android:id="@+id/activity_login_stepper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:layout_marginBottom="62dp"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center">

            <TextView
                android:id="@+id/activity_login_stepper_step1"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:text="1"
                android:textSize="14sp"
                android:gravity="center"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:textColor="@color/textColor_secondary_black"
                android:fontFamily="sans-serif-condensed"
                android:background="@drawable/bg_round_grey"/>

        </LinearLayout>

        <View
            android:layout_width="16dp"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:background="@color/textColor_primary_black"
            android:alpha="0.2"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/activity_login_stepper_step2"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:text="2"
                android:textSize="14sp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:gravity="center"
                android:textColor="@color/textColor_secondary_black"
                android:fontFamily="sans-serif-condensed"
                android:background="@drawable/bg_round"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
