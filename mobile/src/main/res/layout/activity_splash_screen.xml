<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ruiriot.deepur.activity.SplashScreenActivity">

    <ImageView
        android:id="@+id/activity_splash_screen_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:tint="@color/active_icon"
        android:src="@drawable/ic_person_white_48dp"/>

    <TextView
        android:id="@+id/activity_splash_screen_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_splash_screen_image"
        android:text="@string/app_name"
        android:textSize="24sp"
        android:textColor="@color/text_color_primary"
        android:fontFamily="sans-serif-condensed"

        android:layout_centerHorizontal="true"
        android:layout_margin="16dp"/>

</RelativeLayout>
