<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="4dp"
    android:paddingBottom="4dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/item_new_message_users_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="16dp"/>

    <TextView
        android:id="@+id/item_new_message_users_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/text_color_primary"
        android:text="@string/user_name"
        android:textSize="16sp"
        android:layout_marginStart="72dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif"/>

    <TextView
        android:id="@+id/item_new_message_users_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/text_color_secondary"
        android:text="@string/email_example"
        android:textSize="14sp"
        android:layout_below="@id/item_new_message_users_name"
        android:layout_marginStart="72dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="sans-serif"/>

</RelativeLayout>