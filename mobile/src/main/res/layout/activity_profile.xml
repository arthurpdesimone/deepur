<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.ruiriot.deepur.activity.ProfileActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/activity_profile_image"
        android:layout_width="156dp"
        android:layout_height="156dp"
        android:layout_centerHorizontal="true"
        android:layout_margin="32dp"
        android:src="@drawable/ic_person_black_48dp"
        app:civ_border_width="2dp"
        app:civ_border_color="@color/color_accent"/>

    <LinearLayout
        android:id="@+id/activity_profile_ll"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_primary"
        android:layout_below="@id/activity_profile_image">

        <TextView
            android:id="@+id/activity_profile_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/user_name"
            android:textSize="18sp"
            android:textColor="@color/text_color_primary"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="64dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="4dp"
            android:textAllCaps="true"
            android:fontFamily="sans-serif-condensed"/>

        <TextView
            android:id="@+id/activity_profile_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/activity_login_email"
            android:textSize="14sp"
            android:textColor="@color/text_color_secondary"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="64dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="16dp"
            android:fontFamily="sans-serif-condensed"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/activity_profile_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_mode_edit_24dp"
        android:layout_alignParentEnd="true"
        android:padding="8dp"
        android:layout_margin="8dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:layout_below="@id/activity_profile_image"/>

</RelativeLayout>
