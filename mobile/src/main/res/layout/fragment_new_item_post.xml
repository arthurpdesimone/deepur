<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="2dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/background_card">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/fragment_new_item_post_user_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_accent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_sentiment_very_satisfied_black_24dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_margin="16dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/color_accent" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/fragment_new_item_post_user_image"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_margin="16dp"
                android:background="@drawable/bg_round_grey"
                android:contentDescription="@string/activity_login_picture_user_image"
                android:scaleType="centerCrop"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginBottom="16dp"
                android:layout_marginEnd="68dp"
                android:layout_marginStart="68dp"
                android:layout_marginTop="16dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/fragment_new_item_post_user_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:text="User Name"
                    android:padding="4dp"
                    android:textColor="@color/textColor_primary_black"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/fragment_new_item_post_user_difficulty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:fontFamily="sans-serif-condensed-light"
                    android:text="Feeling happy"
                    android:textColor="@color/textColor_secondary_black"
                    android:textSize="14sp"
                    android:drawablePadding="8dp"
                    android:clickable="true"
                    android:background="@drawable/ripple"
                    android:drawableEnd="@drawable/ic_mode_edit_black_18dp"/>

            </LinearLayout>

            <ImageView
                android:id="@+id/fragment_new_item_post_options"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_margin="8dp"
                android:alpha="0.6"
                android:visibility="gone"
                android:contentDescription="@string/options"
                android:padding="8dp"
                android:src="@drawable/ic_more_vert_black_24dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            android:paddingBottom="16dp">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/fragment_new_item_post_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:textSize="14sp"
                android:textColor="@color/textColor_secondary_black"
                android:textColorHint="@color/grey_500"
                android:hint="@string/fragment_new_item_post_edit_text"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/fragment_new_item_post_edit_text"
                android:src="@drawable/ic_camera_alt_black_24dp"
                android:background="@drawable/bg_round"
                android:padding="8dp"
                android:layout_margin="16dp" />

        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>