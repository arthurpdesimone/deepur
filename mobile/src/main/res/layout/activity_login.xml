<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/activity_login_relative"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:padding="8dp">

    <EditText
        android:id="@+id/activity_login_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:inputType="textEmailAddress"
        android:fontFamily="sans-serif"
        android:layout_margin="8dp"
        android:textSize="14sp"
        android:textColor="@color/textColor_secondary_black"
        android:hint="@string/activity_login_email"/>

    <TextView
        android:id="@+id/activity_login_deepur"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/activity_login_email"
        android:text="@string/app_name"
        android:padding="32dp"
        android:layout_marginBottom="32dp"
        android:textSize="44sp"
        android:textColor="@color/textColor_primary_black"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif-condensed-light"/>

    <EditText
        android:id="@+id/activity_login_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_login_email"
        android:inputType="numberPassword"
        android:fontFamily="sans-serif"
        android:layout_margin="8dp"
        android:textSize="14sp"
        android:textColor="@color/textColor_secondary_black"
        android:hint="@string/activity_login_password"/>

    <TextView
        android:id="@+id/activity_login_sign_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_login_password"
        android:text="@string/activity_login_sign_in"
        android:padding="8dp"
        android:minWidth="156dp"
        android:layout_margin="16dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:fontFamily="sans-serif-medium"
        android:textAllCaps="true"
        android:textSize="14sp"
        android:textColor="@color/textColor_secondary_black"
        android:background="@drawable/bg_button"/>

    <TextView
        android:id="@+id/activity_login_create_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_login_sign_in"
        android:text="@string/activity_login_create_account"
        android:padding="8dp"
        android:layout_margin="8dp"
        android:minWidth="96dp"
        android:fontFamily="sans-serif-medium"
        android:layout_centerHorizontal="true"
        android:textAllCaps="true"
        android:textSize="12sp"
        android:textColor="@color/color_accent"/>

    <LinearLayout
        android:id="@+id/signed_in_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_login_create_account"
        android:orientation="horizontal"
        android:visibility="invisible"
        android:padding="16dp">

        <Button
            android:id="@+id/activity_login_sign_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_margin="8dp"
            android:background="@color/color_accent"
            android:text="@string/activity_login_sign_out" />

        <Button
            android:id="@+id/activity_login_verify_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_margin="8dp"
            android:background="@color/color_accent"
            android:text="@string/activity_login_verify_email"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/activity_login_stepper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="68dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/activity_login_stepper_step1"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:text="1"
                android:textSize="14sp"
                android:gravity="center"
                android:textColor="@color/textColor_secondary_black"
                android:fontFamily="sans-serif-condensed"
                android:background="@drawable/bg_round"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/activity_login_stepper_step2"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:text="2"
                android:textSize="14sp"
                android:gravity="center"
                android:textColor="@color/textColor_secondary_black"
                android:fontFamily="sans-serif-condensed"
                android:background="@drawable/bg_round_grey"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>