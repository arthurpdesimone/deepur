<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    android:id="@+id/activity_login_coordinator"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/activity_login_relative">

        <ImageView
            android:id="@+id/activity_login_deepur_logo"
            android:layout_width="match_parent"
            android:layout_height="144dp"
            android:layout_margin="32dp"
            android:visibility="invisible"
            android:src="@drawable/autumn_logo"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/activity_login_deepur"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="24sp"
            android:layout_margin="16dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/activity_login_deepur_logo"
            android:textColor="@color/text_color_primary"
            android:fontFamily="sans-serif-condensed"/>

        <com.facebook.login.widget.LoginButton
            android:id="@+id/activity_login_facebook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="16dp"
            android:layout_centerHorizontal="true"
            android:visibility="gone"
            android:layout_below="@id/activity_login_deepur"/>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/activity_login_email_text_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:textColorHint="@color/md_grey_500"
            android:layout_below="@id/activity_login_deepur">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/activity_login_email_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:imeOptions="actionNext"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:textSize="16sp"
                android:textColor="@color/text_color_primary"
                android:hint="@string/activity_login_email"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/activity_login_password_text_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:errorEnabled="true"
            app:passwordToggleEnabled="true"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:textColorHint="@color/md_grey_500"
            app:passwordToggleDrawable="@drawable/ic_visibility_off_black_18dp"
            android:layout_below="@id/activity_login_email_text_input">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/activity_login_password_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:imeOptions="actionDone"
                android:textSize="16sp"
                android:inputType="textPassword"
                android:textColor="@color/text_color_secondary"
                android:hint="@string/activity_login_password"/>

        </android.support.design.widget.TextInputLayout>

        <TextView
            android:id="@+id/activity_login_sign_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/activity_login_password_text_input"
            android:text="@string/activity_login_sign_in"
            android:padding="8dp"
            android:minWidth="96dp"
            android:layout_margin="16dp"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:textSize="14sp"
            android:background="@drawable/bg_button"
            android:textColor="@color/md_white_1000"/>

        <TextView
            android:id="@+id/activity_login_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/activity_login_sign_in"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:alpha="0.6"
            android:textSize="14sp"
            android:textColor="@color/text_color_primary"/>

        <TextView
            android:id="@+id/activity_login_create_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/activity_login_status"
            android:text="@string/activity_login_create_account"
            android:padding="8dp"
            android:minWidth="96dp"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:textSize="14sp"
            android:textColor="@color/text_color_primary"/>

        <LinearLayout
            android:id="@+id/signed_in_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/activity_login_status"
            android:orientation="horizontal"
            android:visibility="invisible"
            android:padding="16dp">

            <Button
                android:id="@+id/activity_login_sign_out"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:layout_margin="8dp"
                android:background="@color/color_accent"
                android:text="@string/activity_login_sign_out" />

            <Button
                android:id="@+id/activity_login_verify_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:layout_margin="8dp"
                android:background="@color/color_accent"
                android:text="@string/activity_login_verify_email"/>

        </LinearLayout>

    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>