<android.support.design.widget.CoordinatorLayout
    android:id="@+id/activity_onboarding_coordinator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.v4.view.ViewPager
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_onboarding_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="?attr/actionBarSize"
        tools:context="com.ruiriot.deepur.activity.OnBoardingActivity" />
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_gravity="bottom"
        android:layout_marginBottom="48dp">

        <TextView
            android:id="@+id/activity_onboarding_skip_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/skip"
            android:textSize="14sp"
            android:textAllCaps="true"
            android:textColor="@color/text_color_primary"
            android:fontFamily="sans-serif-medium"
            android:padding="8dp"
            android:layout_margin="8dp"/>

        <LinearLayout
            android:id="@+id/activity_onboarding_dots_ll"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <ImageView
                android:id="@+id/activity_onboarding_dots_1"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_margin="4dp"/>

            <ImageView
                android:id="@+id/activity_onboarding_dots_2"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_margin="4dp"/>

            <ImageView
                android:id="@+id/activity_onboarding_dots_3"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_margin="4dp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/activity_onboarding_done_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:text="@string/done"
            android:textAllCaps="true"
            android:textSize="14sp"
            android:textColor="@color/text_color_secondary"
            android:fontFamily="sans-serif-medium"
            android:padding="8dp"
            android:layout_margin="8dp"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/activity_onboarding_next_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_keyboard_arrow_right_24dp"
            android:tint="@color/active_icon"
            android:padding="8dp"
            android:layout_margin="8dp"/>

    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>


