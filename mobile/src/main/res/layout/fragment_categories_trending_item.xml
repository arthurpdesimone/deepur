<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/fragment_categories_trending_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Trending topic"
        android:textColor="@color/text_color_primary"
        android:textSize="14sp"
        android:fontFamily="sans-serif"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/fragment_categories_trending_item_timestamp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nov 27, 2017 &#183; By Rui Donizete"
        android:textColor="@color/text_color_secondary"
        android:textSize="12sp"
        android:fontFamily="sans-serif"
        android:layout_marginTop="4dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/fragment_categories_trending_item_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</android.support.constraint.ConstraintLayout>