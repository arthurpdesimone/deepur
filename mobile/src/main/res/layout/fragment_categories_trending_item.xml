<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/fragment_categories_trending_item"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="0dp"
    app:cardElevation="0dp"
    app:cardMaxElevation="8dp"
    android:layout_marginStart="0dp"
    android:layout_marginEnd="0dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/fragment_categories_trending_item_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_favorite_border_24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="8dp"
            android:padding="8dp"/>

        <ImageView
            android:id="@+id/fragment_categories_trending_item_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerCrop"
            android:background="@drawable/bg_button_stroke"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="16dp"/>

        <TextView
            android:id="@+id/fragment_categories_trending_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="For Gamers"
            android:textColor="@color/text_color_primary"
            android:textSize="16sp"
            android:fontFamily="sans-serif"
            android:layout_marginTop="16dp"
            android:layout_marginStart="72dp"
            android:layout_marginEnd="72dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/fragment_categories_trending_item_timestamp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nov 27, 2017 * By Rui Donizete"
            android:textColor="@color/text_color_secondary"
            android:textSize="14sp"
            android:fontFamily="sans-serif"
            android:layout_marginStart="72dp"
            android:layout_marginEnd="72dp"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/fragment_categories_trending_item_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>


