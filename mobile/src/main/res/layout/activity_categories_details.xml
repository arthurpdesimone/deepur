<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ruiriot.deepur.activity.CategoriesDetailActivity">

    <ImageView
        android:id="@+id/activity_categories_detail_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@string/categories"
        android:scaleType="centerCrop"
        app:layout_constraintDimensionRatio="H, 4:3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/activity_categories_detail_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activity_categories_detail_image"
        android:paddingStart="16dp"
        android:paddingEnd="56dp"
        android:paddingBottom="16dp"
        android:paddingTop="16dp"
        android:text="Group"
        android:textSize="24sp"
        android:textColor="@color/text_color_secondary"
        android:background="@color/color_accent"/>

    <ImageView
        android:id="@+id/activity_categories_detail_favorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:contentDescription="@string/favorite"
        android:padding="8dp"
        android:src="@drawable/ic_favorite_border_white_24dp"
        android:tint="@color/active_icon"
        app:layout_constraintBottom_toBottomOf="@+id/activity_categories_detail_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/activity_categories_detail_name" />

</android.support.constraint.ConstraintLayout>
