<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.ruiriot.deepur.MainHeaderActivity">

    <RelativeLayout
        android:id="@+id/activity_main_header_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="126dp"
            android:src="@drawable/bg_wallpaper"
            android:scaleType="centerCrop"
            android:alpha="0.4"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/activity_main_header_user_image"
            android:layout_width="@dimen/activity_main_header_user_image"
            android:layout_height="@dimen/activity_main_header_user_image"
            android:layout_marginTop="40dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:src="@drawable/menoa"/>

        <TextView
            android:id="@+id/activity_main_header_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/activity_main_header_user_image"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="40dp"
            android:textSize="18sp"
            android:text="User Name"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/textColor_secondary_black"
            android:fontFamily="sans-serif"/>

        <TextView
            android:id="@+id/activity_main_header_user_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/activity_main_header_user_name"
            android:layout_toEndOf="@id/activity_main_header_user_image"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:textSize="16sp"
            android:text="email@email.com"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/textColor_secondary_black"
            android:fontFamily="sans-serif-condensed-light"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/activity_main_header_ll_friends"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_main_header_rl"
        android:orientation="vertical"
        android:layout_marginTop="8dp"
        android:padding="8dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ic_person_black_18dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_camera_alt_black_24dp"
            android:padding="8dp"
            android:layout_marginTop="8dp"
            android:text="12"
            android:textSize="16sp"
            android:gravity="center"
            android:fontFamily="sans-serif"
            android:textColor="@color/textColor_secondary_black"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/activity_main_header_ll_photos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_main_header_rl"
        android:layout_toEndOf="@id/activity_main_header_ll_friends"
        android:orientation="vertical"
        android:layout_marginTop="8dp"
        android:padding="8dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ic_photo_camera_black_18dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_marginTop="8dp"
            android:text="09"
            android:textSize="16sp"
            android:gravity="center"
            android:fontFamily="sans-serif"
            android:textColor="@color/textColor_secondary_black"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/activity_main_header_rl"
        android:layout_toEndOf="@id/activity_main_header_ll_photos">

        <TextView
            android:id="@+id/activity_main_header_latest_post_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="16dp"
            android:textSize="12sp"
            android:gravity="center"
            android:text="@string/activity_main_header_latest_post_title"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/textColor_primary_black"
            android:alpha="0.6"
            android:fontFamily="sans-serif-condensed"/>

        <TextView
            android:id="@+id/activity_main_header_latest_post_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="8dp"
            android:textSize="14sp"
            android:text="@string/lorem"
            android:maxLines="2"
            android:ellipsize="end"
            android:textColor="@color/textColor_secondary_black"
            android:alpha="0.6"
            android:fontFamily="sans-serif-light"/>

    </LinearLayout>

</RelativeLayout>
