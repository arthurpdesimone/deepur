<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.ruiriot.deepur.activity.HomeHeaderActivity">

    <android.support.v7.widget.CardView
        android:id="@+id/activity_home_card_user"
        android:layout_width="@dimen/activity_main_header_user_image"
        android:layout_height="@dimen/activity_main_header_user_image"
        android:layout_margin="8dp"
        app:cardElevation="2dp"
        app:cardCornerRadius="2dp">

        <ImageView
            android:id="@+id/activity_main_header_user_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/rui"
            android:alpha="0.8"/>

        <RelativeLayout
            android:id="@+id/activity_main_header_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/activity_main_header_bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <View
                android:id="@+id/activity_main_header_blur"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:padding="16dp">

                <TextView
                    android:id="@+id/activity_main_header_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="User Name"
                    android:layout_marginBottom="8dp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:fontFamily="sans-serif"/>

                <TextView
                    android:id="@+id/activity_main_header_user_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:text="email@email.com"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:visibility="gone"
                    android:fontFamily="sans-serif-condensed"/>

            </LinearLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <LinearLayout
        android:id="@+id/activity_home_user_info"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/activity_home_card_user">

        <LinearLayout
            android:id="@+id/activity_main_header_ll_friends"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp"
            android:padding="8dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:alpha="0.6"
                android:src="@drawable/ic_person_18dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_camera_alt_24dp"
                android:paddingTop="8dp"
                android:text="12"
                android:textSize="14sp"
                android:gravity="center"
                android:fontFamily="sans-serif"
                android:textColor="@color/text_color_secondary"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/activity_main_header_ll_photos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp"
            android:padding="8dp">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:alpha="0.6"
                android:src="@drawable/ic_photo_camera_18dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:text="09"
                android:textSize="14sp"
                android:gravity="center"
                android:fontFamily="sans-serif"
                android:textColor="@color/text_color_secondary"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/activity_home_user_info"
        android:layout_toEndOf="@id/activity_home_card_user">

        <TextView
            android:id="@+id/activity_main_header_latest_post_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:textSize="12sp"
            android:gravity="center"
            android:text="@string/activity_main_header_latest_post_title"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/text_color_primary"
            android:fontFamily="sans-serif-condensed"/>

        <TextView
            android:id="@+id/activity_main_header_latest_post_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="16dp"
            android:textSize="14sp"
            android:text="@string/lorem"
            android:maxLines="5"
            android:ellipsize="end"
            android:textColor="@color/text_color_secondary"
            android:fontFamily="sans-serif-light"/>

    </LinearLayout>

</RelativeLayout>
